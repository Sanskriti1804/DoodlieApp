<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg_color"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-30dp">

        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_gravity="center"
            android:layout_marginBottom="170dp"
            android:contentDescription="drawing_app_logo"
            android:src="@drawable/app_logo" />

        <LinearLayout
            android:id="@+id/ll_app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="379dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/acids"
                android:letterSpacing="0.1"
                android:text="doodlie"
                android:textColor="@color/app_font_color"
                android:textSize="60sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="32dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ib_canvas_btn"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="18dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_button"
                android:scaleType="fitXY"
                android:src="@drawable/canvas_icon" />

            <ImageButton
                android:id="@+id/ib_theme_btn"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="156dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_button"
                android:scaleType="fitXY"
                android:src="@drawable/themes_icon" />


        </LinearLayout>


    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>